<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="film"
            type="com.example.atlmovie.model.home.MovaResult" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:id="@+id/imgFrame"
            android:layout_marginVertical="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/imgNotifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                load_url="@{film.posterPath}" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/playvid"
                android:layout_gravity="center"/>

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvFilmName"
            android:textFontWeight="700"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="@{film.title}"
            android:maxLines="2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            app:layout_constraintEnd_toStartOf="@id/tvFilmDate"
            app:layout_constraintStart_toEndOf="@id/imgFrame"
            app:layout_constraintTop_toTopOf="@id/imgFrame" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFilmDate"
            android:textFontWeight="400"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:text="@{film.releaseDate}"
            android:maxLines="1"
            android:layout_marginStart="12dp"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvFilmName"
            app:layout_constraintTop_toTopOf="@id/tvFilmName"
            app:layout_constraintBottom_toBottomOf="@id/tvFilmName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>